<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Select_Category">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backimg"
        android:src="@drawable/ic_baseline_arrow_back_24"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seniors"
        android:layout_below="@+id/back"
        android:layout_marginTop="150dp"
        android:id="@+id/senior"
        >

    </Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kids"
        android:id="@+id/kids"
        android:layout_below="@+id/senior"
        >

    </Button>
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="90dp"
      android:visibility="gone"
        android:weightSum="1"
        android:id="@+id/radioGroup"
        android:layout_marginTop="150dp"
      >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Full Time"
            android:id="@+id/radioButtonFt"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="25dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Part Time"
            android:id="@+id/radioButtonPt"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="25dp"
            android:layout_weight="0.13" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:visibility="gone"
        android:weightSum="1"
        android:id="@+id/radioGroupchild"
        android:layout_marginTop="150dp"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Full Time"
            android:id="@+id/radioButtonCFt"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="25dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Part Time"
            android:id="@+id/radioButtonCPt"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="25dp"
            android:layout_weight="0.13" />
    </RadioGroup>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GO"
        android:id="@+id/nxtpage"
        android:layout_marginTop="250dp"
        android:layout_below="@id/kids"/>

</RelativeLayout>