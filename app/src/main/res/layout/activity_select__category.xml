<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".Select_Category">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backimg"
        android:src="@drawable/ic_baseline_arrow_back_24"/>
    <Button

        android:id="@+id/senior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/custom_button"
        android:text="Looking Nanny for a Baby">

    </Button>

    <Button
        android:id="@+id/kids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/senior"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/custom_button"
        android:text="Looking Caretaker for a aged Person"/>

    <Button
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kids"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/custom_button"
        android:text="Messages">

    </Button>
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="90dp"
      android:visibility="gone"
        android:weightSum="1"
        android:id="@+id/radioGroup"
        android:layout_marginTop="150dp"
      >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Full Time"
            android:id="@+id/radioButtonFt"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="25dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Part Time"
            android:id="@+id/radioButtonPt"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="25dp"
            android:layout_weight="0.13" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:visibility="gone"
        android:weightSum="1"
        android:id="@+id/radioGroupchild"
        android:layout_marginTop="150dp"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Full Time"
            android:id="@+id/radioButtonCFt"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="25dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Part Time"
            android:id="@+id/radioButtonCPt"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="25dp"
            android:layout_weight="0.13" />
    </RadioGroup>




</RelativeLayout>