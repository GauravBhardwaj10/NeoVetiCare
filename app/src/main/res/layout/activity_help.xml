<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF1F1"
    tools:context=".Help">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/abeezee"
            android:text="How Can we Help you?"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:src="@drawable/l3" />

        <TextView
            android:layout_width="426dp"
            android:layout_height="match_parent"
        android:layout_marginLeft="10dp"

            android:fontFamily="@font/abeezee"
            android:textColor="@color/black"
            android:text="What type of Question do you have?"
            android:textSize="20dp"
            android:textStyle="italic"/>
        <Button
            android:id="@+id/a1"
            android:background="@drawable/custom_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:width="80dp"
            android:height="80dp"
            android:text="1.How to Sign In/Sign Up as BabySitter/CareTaker " />
        <Button
            android:id="@+id/a2"
            android:layout_width="match_parent"
            android:background="@drawable/custom_button"
            android:layout_height="45dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:width="80dp"
            android:layout_marginTop="10dp"
            android:height="80dp"
            android:text="2.How to Sign In/Sign Up as Parent/SeniorCitizen " />
        <Button
            android:id="@+id/a3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp"
            android:text="3.How to Create Profile as a BabySitter/CareTaker " />
        <Button
            android:id="@+id/a4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_button"

            android:text="4.How to see the list of BabySitter/CareTaker " />
        <Button
            android:id="@+id/a5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:width="80dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_button"
            android:height="80dp"
            android:text="5.How to Contact with BabySitter/careTaker " />
        />
    </LinearLayout>
</ScrollView>