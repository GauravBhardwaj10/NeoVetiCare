<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Help">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="426dp"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:width="80dp"
            android:height="80dp"
            android:background="@drawable/custom_button"
            android:text="How Can we Help you?"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="426dp"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:background="@drawable/custom_button"
            android:width="80dp"
            android:height="80dp"
            android:src="@drawable/l3"/>

        <Button
            android:layout_width="426dp"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:width="80dp"
            android:height="80dp"
            android:background="@drawable/custom_button"
            android:text="What type of Question do you have?"
            android:textSize="17dp"
            android:textStyle="italic"/>
        <Button
            android:id="@+id/a1"
            android:background="@drawable/custom_button"
            android:layout_width="426dp"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:width="80dp"
            android:height="80dp"
            android:text="1.How to Sign In/Sign Up as BabySitter/CareTaker >>" />
        <Button
            android:id="@+id/a2"
            android:layout_width="426dp"
            android:background="@drawable/custom_button"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:width="80dp"
            android:height="80dp"
            android:text="2.How to Sign In/Sign Up as Parent/SeniorCitizen >>" />
        <Button
            android:id="@+id/a3"
            android:layout_width="426dp"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:background="@drawable/custom_button"
            android:width="80dp"
            android:height="80dp"
            android:text="3.How to Create Profile as a BabySitter/CareTaker >>" />
        <Button
            android:id="@+id/a4"
            android:layout_width="426dp"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:width="80dp"
            android:background="@drawable/custom_button"
            android:height="80dp"
            android:text="4.How to see the list of BabySitter/CareTaker >>" />
        <Button
            android:id="@+id/a5"
            android:layout_width="426dp"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:width="80dp"
            android:background="@drawable/custom_button"
            android:height="80dp"
            android:text="5.How to Contact with BabySitter/careTaker >>" />
         />
    </LinearLayout>
</ScrollView>