<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".CareTakerDescription">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            >
            <ImageView
                android:id="@id/ctimage"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:id="@id/name"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/coustard"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/black"
                android:layout_below="@id/ctimage"/>

            <TextView
                android:id="@id/ctname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ctimage"
                android:layout_toRightOf="@id/name"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/abeezee"
                android:hint="Care Taker Name"
                android:textColor="@color/black"
                android:textSize="20dp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:id="@id/age"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textColorHint="@color/black"
                android:fontFamily="@font/coustard"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_below="@id/name"/>

            <TextView
                android:id="@+id/ctage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ctname"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/abeezee"
                android:hint="Care Taker age"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Gender"
                android:id="@id/gender"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textColorHint="@color/black"
                android:fontFamily="@font/coustard"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_below="@id/age"/>

            <TextView
                android:id="@+id/ctgender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/age"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/abeezee"
                android:hint="Care Taker Gender"
                android:textColor="@color/black"
                android:textSize="20dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Timings"
                android:id="@+id/timigs"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textColorHint="@color/black"
                android:fontFamily="@font/coustard"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_below="@id/gender"/>

            <TextView
                android:id="@+id/ctimings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ctgender"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/abeezee"
                android:hint="Care Taker timings"
                android:textColor="@color/black"
                android:textSize="20dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="City"
                android:id="@+id/cty"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textColorHint="@color/black"
                android:fontFamily="@font/coustard"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_below="@id/timigs"/>

            <TextView
                android:id="@+id/ctcity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ctimings"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/abeezee"
                android:hint="Care Taker City"
                android:textColor="@color/black"
                android:textSize="20dp"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Province"
                android:id="@+id/pro"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textColorHint="@color/black"
                android:fontFamily="@font/coustard"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_below="@id/cty"/>

            <TextView
                android:id="@+id/ctprovince"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ctcity"

                
          
                android:layout_toRightOf="@id/cty"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="90dp"

                android:fontFamily="@font/abeezee"
                android:hint="Care Taker Province"
                android:textColor="@color/black"
                android:textSize="20dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="About Yourself"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/coustard"
                android:textColorHint="@color/black"
                android:id="@+id/about"
                android:layout_below="@id/ctprovince"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Care Taker Description"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/abeezee"
                android:textColor="@color/black"
                android:id="@id/ctDesc"
                android:layout_below="@id/about">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="CAD/hr"
                android:textSize="20dp"
                android:textColorHint="@color/black"
                android:id="@+id/currency"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/coustard"
                android:layout_marginTop="10dp"
                android:layout_below="@id/ctDesc">
            </TextView>

            <TextView
                android:id="@+id/ctrate_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ctDesc"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/currency"
                android:fontFamily="@font/abeezee"
                android:hint="Hourly Price"
                android:layout_marginLeft="100dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Experience(in years): "
                android:id="@+id/exp"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textColorHint="@color/black"
                android:fontFamily="@font/coustard"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_below="@id/currency"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Experience"
                android:textSize="20dp"
                android:layout_marginTop="10dp"


                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/exp"
                android:fontFamily="@font/coustard"
                android:textColor="@color/black"
                android:id="@id/experience"
                android:layout_below="@id/currency" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Availability"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/black"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/coustard"
                android:id="@+id/ctavailibility"
                android:layout_below="@id/experience">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/availabledays"
                android:layout_marginTop="3dp"


                android:layout_below="@+id/ctavailibility"/>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>