<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF1F1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="#4DFFFFFF">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="15sp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ctimage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="25sp"
                    android:paddingLeft="5dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/ctname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ctimage"
                    android:fontFamily="@font/coustard"
                    android:paddingLeft="15sp"
                    android:paddingTop="7sp"
                    android:text="Caretaker Name"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ctDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@id/ctimage"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="10sp"
                    android:paddingTop="37sp"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="20dp" />



                <Button
                    android:id="@+id/bookct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/custom_button"
                    android:text="Details"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/ctrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_below="@+id/ctDesc"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="110dp"
                    android:paddingBottom="10dp"
                    android:text="Price"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_below="@+id/ctDesc"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/ctrate"
                    android:paddingBottom="10dp"
                    android:text="CAD/hr "
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/currency"
                    android:text="Message"
                    android:background="@drawable/custom_button"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>