<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF1F1"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4DFFFFFF"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="135dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="15sp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginTop="25sp"
                    android:id="@+id/ctimage"
                    android:paddingLeft="5dp"
                    />
                <TextView
                    android:id="@+id/ctname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ctimage"
                    android:fontFamily="@font/coustard"
                    android:textColor="@color/black"
                    android:paddingLeft="15sp"
                    android:paddingTop="7sp"
                    android:text="Caretaker Name"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ctDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@id/ctimage"
                    android:paddingLeft="10sp"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    android:paddingTop="37sp"
                    android:text="Description" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/bookct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"

                    android:background="@drawable/custom_button"
                    android:text="Details"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/ctrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Price"
                    android:textColor="@color/black"
                    android:layout_marginLeft="110dp"
                    android:paddingBottom="10dp"
                    />
                <TextView
                    android:id="@+id/currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                     android:textColor="@color/black"
                    android:text="CAD "
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/ctrate"
                    android:paddingBottom="10dp"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>